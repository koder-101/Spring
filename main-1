);
ğŸ’» Step 3: Update Schema
const typeDefs = gql`
  type User {
    id: ID!
    username: String!
  }

  type AuthPayload {
    token: String!
    user: User!
  }

  type Author {
    id: ID!
    name: String!
    books: [Book!]!
  }

  type Book {
    id: ID!
    title: String!
    author: Author!
  }

  input RegisterInput {
    username: String!
    password: String!
  }

  input LoginInput {
    username: String!
    password: String!
  }

  input AddAuthorInput {
    name: String!
  }

  input AddBookInput {
    title: String!
    authorId: ID!
  }

  type Query {
    books: [Book!]!
    authors: [Author!]!
    book(id: ID!): Book
    author(id: ID!): Author
    me: User
  }

  type Mutation {
    register(input: RegisterInput!): User!
    login(input: LoginInput!): AuthPayload!

    addAuthor(input: AddAuthorInput!): Author!
    addBook(input: AddBookInput!): Book!
  }
`;
ğŸ’» Step 4: Auth Resolvers
const jwt = require("jsonwebtoken");
const bcrypt = require("bcrypt");

const SECRET = "supersecretkey"; // in real apps: use .env

const resolvers = {
  Query: {
    books: async () => {
      const [rows] = await pool.query("SELECT * FROM books");
      return rows;
    },
    authors: async () => {
      const [rows] = await pool.query("SELECT * FROM authors");
      return rows;
    },
    book: async (_, { id }) => {
      const [rows] = await pool.query("SELECT * FROM books WHERE id = ?", [id]);
      return rows[0];
    },
    author: async (_, { id }) => {
      const [rows] = await pool.query("SELECT * FROM authors WHERE id = ?", [id]);
      return rows[0];
    },
    me: (_, __, { user }) => {
      return user || null;
    }
  },

  Mutation: {
    register: async (_, { input }) => {
      const hashed = await bcrypt.hash(input.password, 10);
      const [result] = await pool.query(
        "INSERT INTO users (username, password) VALUES (?, ?)",
        [input.username, hashed]
      );
      return { id: result.insertId, username: input.username };
    },

    login: async (_, { input }) => {
      const [rows] = await pool.query("SELECT * FROM users WHERE username = ?", [
        input.username
      ]);
      if (rows.length === 0) throw new Error("User not found");

      const user = rows[0];
      const valid = await bcrypt.compare(input.password, user.password);
      if (!valid) throw new Error("Invalid password");

      const token = jwt.sign({ id: user.id, username: user.username }, SECRET, {
        expiresIn: "1h"
      });

      return {
        token,
        user: { id: user.id, username: user.username }
      };
    },

    addAuthor: async (_, { input }, { user }) => {
      if (!user) throw new Error("Not authenticated");
      const [result] = await pool.query("INSERT INTO authors (name) VALUES (?)", [
        input.name
      ]);
      return { id: result.insertId, name: input.name };
    },

    addBook: async (_, { input }, { user }) => {
      if (!user) throw new Error("Not authenticated");
      const { title, authorId } = input;
      const [result] = await pool.query(
        "INSERT INTO books (title, authorId) VALUES (?, ?)",
        [title, authorId]
      );
      return { id: result.insertId, title, authorId };
    }
  },

  Book: {
    author: async (book) => {
      const [rows] = await pool.query("SELECT * FROM authors WHERE id = ?", [
        book.authorId
      ]);
      return rows[0];
    }
  },

  Author: {
    books: async (author) => {
      const [rows] = await pool.query("SELECT * FROM books WHERE authorId = ?", [
        author.id
      ]);
      return rows;
    }
  }
};
ğŸ’» Step 5: Add Context Middleware
Update ApolloServer in index.js:

const server = new ApolloServer({
  typeDefs,
  resolvers,
  context: ({ req }) => {
    const token = req.headers.authorization || "";
    if (token) {
      try {
        const decoded = jwt.verify(token, SECRET);
        return { user: decoded };
      } catch (err) {
        console.error("Invalid token");
      }
    }
    return {};
  }
});
