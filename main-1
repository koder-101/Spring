ğŸ’» Step 1: Update Schema
const typeDefs = gql`
  type Author {
    id: ID!
    name: String!
    books: [Book!]!
  }

  type Book {
    id: ID!
    title: String!
    author: Author!
  }

  type Query {
    books(limit: Int, offset: Int, search: String): [Book!]!
    authors(limit: Int, offset: Int, search: String): [Author!]!
    book(id: ID!): Book
    author(id: ID!): Author
  }
`;
ğŸ’» Step 2: Update Resolvers
const resolvers = {
  Query: {
    books: async (_, { limit = 10, offset = 0, search }) => {
      let query = "SELECT * FROM books";
      const params = [];

      if (search) {
        query += " WHERE title LIKE ?";
        params.push(`%${search}%`);
      }

      query += " LIMIT ? OFFSET ?";
      params.push(limit, offset);

      const [rows] = await pool.query(query, params);
      return rows;
    },

    authors: async (_, { limit = 10, offset = 0, search }) => {
      let query = "SELECT * FROM authors";
      const params = [];

      if (search) {
        query += " WHERE name LIKE ?";
        params.push(`%${search}%`);
      }

      query += " LIMIT ? OFFSET ?";
      params.push(limit, offset);

      const [rows] = await pool.query(query, params);
      return rows;
    },

    book: async (_, { id }) => {
      const [rows] = await pool.query("SELECT * FROM books WHERE id = ?", [id]);
      return rows[0];
    },

    author: async (_, { id }) => {
      const [rows] = await pool.query("SELECT * FROM authors WHERE id = ?", [id]);
      return rows[0];
    }
  },

  Book: {
    author: async (book) => {
      const [rows] = await pool.query("SELECT * FROM authors WHERE id = ?", [
        book.authorId
      ]);
      return rows[0];
    }
  },

  Author: {
    books: async (author) => {
      const [rows] = await pool.query("SELECT * FROM books WHERE authorId = ?", [
        author.id
      ]);
      return rows;
    }
  }
};
